<h1>Listing Leagues</h1>

<table>
    <tr>
        <th>Name</th>
    </tr>

    <% @leagues.each do |league| %>
      <% if can? :read, league %>
        <tr>
            <td><%= league.name %></td>
            <td><%= link_to 'Show', league_path(league) %></td>
            <td><%= link_to 'Edit', edit_league_path(league) %></td>
            <td><%= link_to 'Destroy', league_path(league),
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>

</table>

<br>
<%= link_to 'Create new league', new_user_league_path(current_user) %>
